

password = input("enter the password: ")



low = 0 # count for lowercase characters
up = 0 # count for uppercase characters
num = 0 # count for numbers 
spl = 0 # count for special characters

if len(password)>=6 and len(password)<=16:
    for i in password:
        # counting lowercase characters
        if (i.islower()):
            low+=1        

        # counting uppercase characters
        if (i.isupper()):
            up+=1           
 
        # counting digits
        if (i.isdigit()):
            num+=1           
 
        # counting the mentioned special characters
        if(i=='$'or i=='#' or i=='@'):
            spl+=1          
if (low>=1 and up>=1 and num>=1 and spl>=1):
    print("Valid Password")  
else:
    print("Invalid Password")
